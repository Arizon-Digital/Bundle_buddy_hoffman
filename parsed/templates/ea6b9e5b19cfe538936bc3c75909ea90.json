{"components/halothemes/halo-ask-an-expert":"<div class=\"halo-ask-an-expert\">\r\n    <div class=\"col-left col\">\r\n        <div class=\"img\">\r\n            <img class=\"lazyload\" src=\"{{cdn 'img/loading.svg'}}\" data-src=\"https://cdn11.bigcommerce.com/s-{{settings.store_hash}}/product_images/uploaded_images/{{theme_settings.halo-ask-an-expert-image}}\" alt=\"{{theme_settings.halo-ask-an-expert-title}}\">\r\n        </div>\r\n        <div class=\"text\">\r\n            {{#if theme_settings.halo-ask-an-expert-title}}\r\n                <h3>{{theme_settings.halo-ask-an-expert-title}}</h3>\r\n            {{/if}}\r\n            {{#if theme_settings.halo-ask-an-expert-text}}\r\n                <span>{{theme_settings.halo-ask-an-expert-text}}</span>\r\n            {{/if}}\r\n        </div>\r\n    </div>\r\n    <div class=\"col-right col\">\r\n        {{#if theme_settings.halo_ask_an_expert_subject}}\r\n            <a ask-an-expert-link class=\"button button--primary\" href=\"#\" data-reveal-id=\"halo-ask-an-expert\">{{theme_settings.halo_ask_an_expert_subject}}</a>\r\n        {{/if}}\r\n    </div>\r\n</div>\r\n\r\n<div id=\"halo-ask-an-expert\" class=\"modal\" data-reveal>\r\n    <div class=\"modal-content\">\r\n        <div class=\"modal-header modal-header2\">\r\n            <h2 class=\"modal-header-title\">{{theme_settings.halo-ask-an-expert-popup-title}}</h2>\r\n            <a href=\"#\" class=\"modal-close\" aria-label=\"{{lang 'common.close'}}\" role=\"button\">&#215;</a>\r\n        </div>\r\n        <div class=\"modal-body\"  data-product-image=\"{{getImage product.main_image}}\">\r\n            <div class=\"halo-ask-an-expert-subtitle\"><span>{{theme_settings.halo-ask-an-expert-popup-subtitle}}</span></div>\r\n            <div class=\"halo-ask-an-expert-text description\">{{theme_settings.halo-ask-an-expert-popup-text1}}</div>\r\n            <div class=\"halo-ask-an-expert-text question\">{{theme_settings.halo-ask-an-expert-popup-text2}}</div>\r\n            <div id=\"halo-ask-an-expert-results\" class=\"halo-ask-an-expert-text\"></div>\r\n            <form data-contact-form class=\"form\" id=\"halo-ask-an-expert-form\" action=\"{{urls.contact_us_submit}}\"  data-product-title=\"{{product.title}}\" data-product-url=\"{{product.url}}\" data-product-sku=\"{{product.sku}}\"\r\n            method=\"post\">\r\n                <fieldset class=\"form-fieldset\">\r\n                    <div class=\"hl-form-field-wrapper\"></div>\r\n                    <div class=\"form-field form-field-radio\">\r\n                        <label class=\"form-label\">Do you need:</label>\r\n                        <input class=\"form-radio\" id=\"pricing-radio\" type=\"radio\" name=\"type_package\" checked value=\"Pricing\">\r\n                        <label class=\"form-label\" for=\"pricing-radio\">Pricing</label>\r\n                        <input class=\"form-radio\" id=\"answers-radio\" type=\"radio\" name=\"type_package\" value=\"Answers\">\r\n                        <label class=\"form-label\" for=\"answers-radio\">Answers</label>\r\n                        <input class=\"form-radio\" id=\"both-radio\" type=\"radio\" name=\"type_package\" value=\"Pricing & Answers\">\r\n                        <label class=\"form-label\" for=\"both-radio\">Both</label>\r\n                    </div>\r\n                    <div class=\"form-field comment-area\">\r\n                        <label class=\"form-label\" for=\"comment-area\">What can i help you with today ?</label>\r\n                        <textarea  name=\"contact_comment_area\" cols=\"30\" rows=\"6\" class=\"form-input\" id=\"comment-area\" required=\"true\"></textarea>\r\n                    </div>\r\n                    <div class=\"form-field form-field-radio form-field-radio2\">\r\n                        <label class=\"form-label form-label-custom\">How would you like me to contact you ?</label>\r\n                        <input class=\"form-radio\" id=\"phone-radio\" type=\"radio\" name=\"type_contact\" checked value=\"Phone\">\r\n                        <label class=\"form-label\" for=\"phone-radio\">Phone</label>\r\n                        <input class=\"form-radio\" id=\"email-radio\" type=\"radio\" name=\"type_contact\" value=\"Email\">\r\n                        <label class=\"form-label\" for=\"email-radio\">Email</label>\r\n                        <input class=\"form-radio\" id=\"both-radio-2\" type=\"radio\" name=\"type_contact\" value=\"Phone & Email\">\r\n                        <label class=\"form-label\" for=\"both-radio-2\">Both</label>\r\n                    </div>\r\n                    <div class=\"hl-form-field\" style=\"display: none;\">\r\n                        <textarea name=\"contact_question\" cols=\"30\" rows=\"3\" class=\"form-input\"\r\n                            id=\"contact_question\"></textarea>\r\n                    </div>\r\n                    <div class=\"g-recaptcha\" data-sitekey=\"6LcjX0sbAAAAACp92-MNpx66FT4pbIWh-FTDmkkz\"></div>\r\n                    <div class=\"form-actions\">\r\n                       <button type=\"submit\" class=\"button button--primary button--large\" id=\"halo-ask-an-expert-button\">Send question</button>\r\n                    </div>\r\n                </fieldset>\r\n            </form>\r\n            <script src=\"https://www.google.com/recaptcha/api.js\" async=\"\" defer=\"\"></script>\r\n        </div>\r\n    </div>\r\n</div>\r\n"}
